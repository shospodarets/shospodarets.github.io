{
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "spellcheck"
  ],
  "rules": {
    "spellcheck/spell-checker": ["error",
      {
        "comments": true,
        "strings": false,
        "identifiers": false,
        "templates": false,
        "lang": "en_US",
        "skipWords": [
          "globals",
          "cmd",
          "usr",
          "subprocess",
          "dom",
          "captcha",
          "templating",
          "urls",
          "href",
          "funcs",
          "disqus"
        ],
        "skipIfMatch": [
          "noinspection*"
        ],
        "skipWordIfMatch": [
          "std*"
        ],
        "minLength": 3
      }],
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "strict": [
      2,
      "never"
    ],
    "no-trailing-spaces": 0,
    "object-shorthand": 0,
    "padded-blocks": 0,
    "no-use-before-define": 0,
    "comma-dangle": 0,
    "arrow-spacing": 0,
    "no-param-reassign": 0,
    "arrow-body-style": 0,
    "eol-last": 0,
    "max-len": 0,
    "quote-props": 0,
    "object-curly-spacing": 0,
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": [
          "-",
          "+",
          "*"
        ],
        "markers": [
          "/",
          "!",
          ","
        ]
      }
    ],
    "consistent-return": 0,
    "func-names": 0,
    "no-case-declarations": 0,
    "radix": 0,
    "no-console": 0,
    "import/first": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "import/no-unresolved": 0,
    "import/no-webpack-loader-syntax": 0,
    "import/no-dynamic-require": 0,
    "no-plusplus": 0,
    "import/no-mutable-exports": 0,
    "no-underscore-dangle": 0,
    "arrow-parens": 0,
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
    "global-require": 0,
    "prefer-rest-params": 0,
    "no-prototype-builtins": 0,
    "linebreak-style": 0,
    "no-warning-comments": 2,
    "require-jsdoc": 0,
    "valid-jsdoc": [2, {
      "requireParamDescription": false,
      "requireReturnDescription": false,
      "requireReturn": false,
      "prefer": {
        "return": "returns"
      }
    }],
    "import/prefer-default-export": 0,
    "no-unused-expressions": 0
  }
}